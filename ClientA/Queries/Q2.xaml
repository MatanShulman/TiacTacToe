<UserControl x:Class="Client.Q2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="350">
   
        <Grid Loaded="Grid_Loaded" Height="300" Width="350" >
            <DataGrid x:Name="dgv"  HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" Height="300" Width="350" Background="White" Loaded="Grid_Loaded">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Game ID"  Binding="{Binding gameId}"/>
                    <DataGridTextColumn Header="X"  Binding="{Binding firstPlayer}"/>
     
                    <DataGridTextColumn Header="O"  Binding="{Binding secondPlayer}"/>
                    <DataGridTextColumn Header="Mode"  Binding="{Binding gameMode}"/>
                    <DataGridTextColumn Header="Winner"  Binding="{Binding winner}"/>
            </DataGrid.Columns>



            </DataGrid>

        </Grid>
</UserControl>
